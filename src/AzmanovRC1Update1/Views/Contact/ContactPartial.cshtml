@model Azmanov.ViewModels.Models.ContactFormViewModel

<div class="row">
    <form method="post" class="form-horizontal col-xs-12">
        <div class="alert alert-danger" asp-validation-summary="ValidationSummary.ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label col-md-1">Name</label>
            <div class="col-md-6">
                <input asp-for="Name" class="form-control" placeholder="e.g. Your Name" />
            </div>
            <div class="col-md-5">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label col-md-1">Email</label>
            <div class="col-md-6">
                <input asp-for="Email" type="email" class="form-control" placeholder="e.g. Your Email" />
            </div>
            <div class="col-md-5">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Message" class="control-label col-md-1">Message</label>
            <div class="col-md-6">
                <textarea asp-for="Message" cols="40" rows="4" class="form-control" placeholder="e.g. The Message"></textarea>
            </div>
            <div class="col-md-5">
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-default" data-toggle="tooltip" title="Go to home page" data-placement="left">Cancel</a>
                <input type="submit" value="Send Message" class="btn btn-success" data-toggle="tooltip" title="Send your message" data-placement="right"/>
            </div>
        </div>
    </form>
</div>

